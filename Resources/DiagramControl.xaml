<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DiagramDesigner"
                    xmlns:s="clr-namespace:DiagramDesigner"
                    xmlns:controls="clr-namespace:DiagramDesigner.Controls">

    <Style TargetType="controls:DiagramControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                        <GroupBox x:Name="DiagramHeader" Background="White">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto" Name="DesignerScrollViewer">
                                <s:DesignerCanvas
                                    Focusable="true" 
                                    x:Name="Designer"
                                    Background="{StaticResource WindowBackgroundBrush}"
                                    Margin="2" 
                                    FocusVisualStyle="{x:Null}"/>
                            </ScrollViewer>
                        </GroupBox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>